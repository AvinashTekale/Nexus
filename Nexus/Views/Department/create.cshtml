@model Nexus.Entities.Department

@{
    ViewData["Title"] = "Create Department";
}
<div class="card">
    <div class="card-header">
        <h4>Department</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <!-- Hidden input for HospitalId -->
            <input type="hidden" asp-for="HospitalId" value="@ViewBag.HospitalId" />

            <div class="form-group">
                <div class="row m-0 p-3">
                    <div class="col-12 col-lg-2 col-md-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-12 col-lg-10 col-md-10">
                        <input asp-for="Name" class="form-control" placeholder="Enter department name" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row m-0 p-3">
                    <div class="col-12 col-lg-2 col-md-2">
                        <label asp-for="Location"></label>
                    </div>
                    <div class="col-12 col-lg-10 col-md-10">
                        <input asp-for="Location" class="form-control" placeholder="Enter department location" />
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-success">Submit</button>
            <a href="@Url.Action("Index", "Department", new { hospitalId = ViewBag.HospitalId })" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

