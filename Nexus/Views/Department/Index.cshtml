@model IEnumerable<Nexus.Entities.Department>

@{
    ViewData["Title"] = "Departments";
}


<div class="card">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Location</th>
                    <th>
                        <a asp-action="Create" class="btn btn-success btn-sm">
                            <i class="fas fa-plus"></i> Add
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model)
                {
                    <tr>
                        <td>@(Model.ToList().IndexOf(department) + 1)</td>
                        <td>@department.Name</td>
                        <td>@department.Location</td>
                        <td>
                            <a href="@Url.Action("Edit", "Department", new { id = department.Id })" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i>Edit</a>
                            <a href="@Url.Action("Delete", "Department", new { id = department.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this department?');"><i class="fas fa-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
