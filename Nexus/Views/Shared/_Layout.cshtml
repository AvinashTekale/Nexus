    <!-- Alertify.js Logout Confirmation Script -->
    <script>
        document.getElementById('logout-link').addEventListener('click', function (e) {
            e.preventDefault(); // Prevent the default link behavior

            // Show Alertify.js confirmation dialog
            alertify.confirm(
                'Logout Confirmation', // Dialog title
                'Are you sure you want to logout?', // Dialog message
                function () { // On OK (Confirm)
                    window.location.href = document.getElementById('logout-link').href; // Redirect to logout URL
                },
                function () { // On Cancel
                    alertify.error('Logout canceled.');
                }
            ).set('labels', { ok: 'Yes', cancel: 'No' }); // Customize button labels
        });
    </script>
    <!-- Sidebar Toggle Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const hamburgerBtn = document.getElementById('topnav-hamburger-icon');
            const sidebar = document.querySelector('.app-menu.navbar-menu');
            const layoutWrapper = document.getElementById('layout-wrapper');

            hamburgerBtn.addEventListener('click', function () {
                sidebar.classList.toggle('collapsed');
                layoutWrapper.classList.toggle('sidebar-collapsed');
                this.classList.toggle('open'); // Toggle hamburger icon animation
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
