    <!-- Add Custom CSS for Sidebar Toggle and Logo -->
    <style>
        /* Sidebar fixed position */
        .app-menu.navbar-menu {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh; /* Full viewport height */
            width: 300px; /* Increased width from 250px to 300px */
            transition: all 0.3s ease-in-out;
            z-index: 1000; /* Ensure sidebar stays above other elements */
        }

            /* Collapsed state */
            .app-menu.navbar-menu.collapsed {
                width: 0;
                overflow: hidden;
                visibility: hidden;
            }

        /* Main content adjustments */
        .main-content {
            transition: all 0.3s ease-in-out;
            margin-left: 300px; /* Match the sidebar width */
            width: calc(100% - 300px); /* Adjust width to fit remaining space */
        }

        /* Main content when sidebar is collapsed */
        .sidebar-collapsed .main-content {
            margin-left: 0 !important;
            width: 100% !important;
        }

        /* Ensure page-topbar doesn't overlap with fixed sidebar */
        #page-topbar {
            margin-left: 300px; /* Match the sidebar width */
            transition: all 0.3s ease-in-out;
        }

        /* Adjust page-topbar when sidebar is collapsed */
        .sidebar-collapsed #page-topbar {
            margin-left: 0 !important;
            width: 100% !important;
        }

        /* Hamburger icon animation */
        .topnav-hamburger-icon .hamburger-icon {
            position: relative;
            width: 25px;
            height: 20px;
            cursor: pointer;
        }

            .topnav-hamburger-icon .hamburger-icon span {
                position: absolute;
                width: 100%;
                height: 2px;
                background: #333; /* Adjust color to match your theme */
                transition: all 0.3s ease-in-out;
            }

                .topnav-hamburger-icon .hamburger-icon span:nth-child(1) {
                    top: 0;
                }

                .topnav-hamburger-icon .hamburger-icon span:nth-child(2) {
                    top: 9px;
                }

                .topnav-hamburger-icon .hamburger-icon span:nth-child(3) {
                    top: 18px;
                }

        .topnav-hamburger-icon.open .hamburger-icon span:nth-child(1) {
            transform: rotate(45deg);
            top: 9px;
        }

        .topnav-hamburger-icon.open .hamburger-icon span:nth-child(2) {
            opacity: 0;
        }

        .topnav-hamburger-icon.open .hamburger-icon span:nth-child(3) {
            transform: rotate(-45deg);
            top: 9px;
        }

        /* Logo styling in the header */
        .header-logo {
            display: inline-block;
            margin-right: 15px; /* Space between logo and hamburger/search */
        }

            .header-logo img {
                max-height: 60px; /* Logo size */
                width: auto;
            }

        /* Ensure the header layout adjusts properly */
        .navbar-header .d-flex {
            align-items: center;
        }

        /* Adjust user dropdown styling after removing the image */
        .topbar-user .btn {
            padding: 5px 10px;
        }

        .topbar-user .user-name-text,
        .topbar-user .user-name-sub-text {
            display: inline-block !important; /* Ensure the name and role are always visible */
        }
    </style>
</head>
