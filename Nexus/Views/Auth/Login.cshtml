@model Nexus.DTOs.LoginDto

@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nexus</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Nexus.styles.css" asp-append-version="true" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/76b65a4798.js" crossorigin="anonymous"></script>

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- jsvectormap css -->
    <link href="~/assets/libs/jsvectormap/jsvectormap.min.css" rel="stylesheet" />

    <!--Swiper slider css-->
    <link href="~/assets/libs/swiper/swiper-bundle.min.css" rel="stylesheet" />

    <!-- Layout config Js -->
    <script src="~/assets/js/layout.js"></script>

    <!-- Bootstrap Css -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Icons Css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" />
    <!-- App Css-->
    <link href="~/assets/css/app.min.css" rel="stylesheet" />
    <!-- Custom Css-->
    <link href="~/assets/css/custom.min.css" rel="stylesheet" />

    <style>
        .logoLogin {
            width: 150px;
            height: 69px;
        }

        #page-topbar {
            left: 0px !important;
        }
    </style>

    <script>
        function confirmLogout(event) {
            event.preventDefault();
            if (confirm("Do you really want to logout?")) {
                alert("Logout successful");
                window.location.href = event.target.href;
            }
        }
    </script>
</head>
<body>
    <!-- Begin page -->
    <div id="layout-wrapper">
        <header id="page-topbar">
            <div class="layout-width">
                <div class="navbar-header">
                    <div class="d-flex">
                        <!-- LOGO -->
                        <div class="navbar-brand-box">
                            <a class="logo logo-dark">
                                <span class="logo-lg">
                                    <img src="~/assets/images/Nexus-logo-lg.png" class="logoLogin">
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="container d-flex justify-content-center mt-5">
            <div class="col-md-6 col-lg-4 p-4 mt-5">
                <div class="card card-body mt-5">
                    <h2 class="card-title text-center">@ViewData["Title"]</h2>

                    <!-- Error Alert -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger text-center" role="alert">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <!-- Logout Success Alert -->
                    @if (TempData["LogoutMessage"] != null)
                    {
                        <script>
                            window.onload = function () {
                                alert("@Html.Raw(TempData["LogoutMessage"])");
                            };
                        </script>
                        <div class="alert alert-success text-center" role="alert">
                            @TempData["LogoutMessage"]
                        </div>
                    }

                    <!-- Login Form -->
                    <form id="loginForm" asp-controller="Auth" asp-action="Login" method="post">
                        <div class="form-group mb-3">
                            <label for="Email">Email</label>
                            <input type="email" id="Email" name="Email" class="form-control" required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="Password">Password</label>
                            <input type="password" id="Password" name="Password" class="form-control" required />
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>

                    <div id="loginMessage" class="text-danger text-center"></div>

                  
                </div>
            </div>
        </div>
    </div>
</body>
</html>
