@model Nexus.DTOs.RegisterDTO

@{
    ViewData["Title"] = "Register Admin";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="card col-md-6 col-lg-4 p-4">
        <div class="card-body">
            <h2 class="card-title text-center">@ViewData["Title"]</h2>

            <!-- Registration Form -->
            <form id="registerForm">
                <div class="form-group mb-3">
                    <label for="Name">Name</label>
                    <input type="text" id="Name" name="Name" class="form-control" />
                    <span id="NameError" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Email">Email</label>
                    <input type="email" id="Email" name="Email" class="form-control" />
                    <span id="EmailError" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Password">Password</label>
                    <input type="password" id="Password" name="Password" class="form-control" />
                    <span id="PasswordError" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Register</button>
            </form>


            <!-- Link to Login Page -->
            <div class="mt-3">
                <p>Already have an account? <a href="#" id="goToLoginPage">Login here</a></p>
            </div>

            <div id="message" class="text-success"></div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Register Form Submission using AJAX
        handleFormSubmission('#registerForm', '@Url.Action("Register", "Auth")', 'Registration successful! Please login.', 'An error occurred during registration.');

        // Handle the link to go to the login page via AJAX
        handlePageNavigation('#goToLoginPage', '@Url.Action("Login", "Auth")');
    });
</script>
