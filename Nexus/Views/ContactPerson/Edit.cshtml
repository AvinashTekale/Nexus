@model Nexus.DTOs.ContactPersonDTO

@{
    ViewBag.Title = "Edit Contact Person";
}

<div class="card">
    <div class="card-body">
        <h4>Edit Contact Person</h4>

        <!-- Form to Submit Data -->
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <!-- Hidden Field for Id -->
            <input asp-for="Id" type="hidden" />

            <!-- Name -->
            <div class="form-group">
                <div class="row m-0 p-3">
                    <div class="col-12 col-lg-2 col-md-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-12 col-lg-10 col-md-10">
                        <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
            </div>

            <!-- Phone -->
            <div class="form-group">
                <div class="row m-0 p-3">
                    <div class="col-12 col-lg-2 col-md-2">
                        <label asp-for="Phone"></label>
                    </div>
                    <div class="col-12 col-lg-10 col-md-10">
                        <input asp-for="Phone" class="form-control" placeholder="Enter Phone" />
                        @Html.ValidationMessageFor(model => model.Phone)
                    </div>
                </div>
            </div>

            <!-- Email -->
            <div class="form-group">
                <div class="row m-0 p-3">
                    <div class="col-12 col-lg-2 col-md-2">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-12 col-lg-10 col-md-10">
                        <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
            </div>

            <!-- Password -->
            <div class="form-group">
                <div class="row m-0 p-3">
                    <div class="col-12 col-lg-2 col-md-2">
                        <label asp-for="Password"></label>
                    </div>
                    <div class="col-12 col-lg-10 col-md-10">
                        <input asp-for="Password" class="form-control" placeholder="Enter Password" type="password" />
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>
            </div>

            <!-- PartnerId (Foreign Key Dropdown) -->
            <div class="form-group">
                <div class="row m-0 p-3">
                    <div class="col-12 col-lg-2 col-md-2">
                        <label asp-for="PartnerId"></label>
                    </div>
                    <div class="col-12 col-lg-10 col-md-10">
                        <select asp-for="PartnerId" class="form-control" asp-items="ViewBag.Partners">
                            <option value="">Select Partner</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.PartnerId)
                    </div>
                </div>
            </div>

            <!-- Role (Dropdown for Roles) -->
            <div class="form-group">
                <div class="row m-0 p-3">
                    <div class="col-12 col-lg-2 col-md-2">
                        <label asp-for="Role"></label>
                    </div>
                    <div class="col-12 col-lg-10 col-md-10">
                        <select asp-for="Role" class="form-control" asp-items="ViewBag.Roles">
                            <option value="">Select Role</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.Role)
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <div class="row m-0 p-3">
                    <div class="col-12 col-lg-2 col-md-2">
                    </div>
                    <div class="col-12 col-lg-10 col-md-10">
                        <button type="submit" class="btn btn-primary">Save</button>
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
