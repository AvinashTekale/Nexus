@model Nexus.Entities.EquipmentModel

<div class="card card-body">
    <h4>Edit Equipment</h4>

    <form asp-action="Edit" asp-route-id="@Model.Id">
        <!-- Name -->
        <div class="form-group">
            <div class="row m-0 p-3">
                <div class="col-12 col-lg-2 col-md-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-12 col-lg-10 col-md-10">
                    <input asp-for="Name" class="form-control" placeholder="Enter equipment name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Partner -->
        <div class="form-group">
            <div class="row m-0 p-3">
                <div class="col-12 col-lg-2 col-md-2">
                    <label asp-for="PartnerId">Select Partner</label>
                </div>
                <div class="col-12 col-lg-10 col-md-10">
                    <select asp-for="PartnerId" class="form-control">
                        <option value="">-- Select Partner --</option>
                        @foreach (var partner in ViewBag.Partners as IEnumerable<Nexus.Entities.Partner>)
                        {
                            <option value="@partner.Id" selected="@(partner.Id == Model.PartnerId ? "selected" : null)">@partner.Name</option>
                        }
                    </select>

                    <span asp-validation-for="PartnerId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row m-0 p-3">
                <div class="col-12 col-lg-2 col-md-2"></div>
                <div class="col-12 col-lg-10 col-md-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>
