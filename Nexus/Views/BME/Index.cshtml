@model IEnumerable<Nexus.Entities.BMEAccount>

@{
    ViewData["Title"] = "BME Accounts";
}

<div class="card">

    <div class="card-header">
        <h4>BME Accounts</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>
                        <a asp-action="Create" class="btn btn-success btn-sm">
                            <i class="fas fa-plus"></i> Add
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var account in Model)
                    {
                        <tr>
                            <td>@(Model.ToList().IndexOf(account) + 1)</td>
                            <td>@account.Name</td>
                            <td>@account.Phone</td>
                            <td>@account.User.Email</td>
                            <td>
                                <a href="@Url.Action("Edit", "BMEAccount", new { id = account.Id })" class="btn btn-warning btn-sm text-white">                                    <i class="fas fa-edit"></i> Edit</a>
                                <a href="@Url.Action("Delete", "BMEAccount", new { id = account.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this BME account?');"><i class="fas fa-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No BME accounts found.</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>