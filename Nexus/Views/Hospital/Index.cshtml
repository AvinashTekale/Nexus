@model IEnumerable<Nexus.Entities.Hospital>
@{
    ViewData["Title"] = "Hospital List";
}
<div class="card">
    <div class="card-header">
        <h4>Hospitals</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Number of Beds</th>
                    <th><a asp-action="Create" class="btn btn-success btn-sm"><i class="fa fa-plus"></i></a></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(Model.ToList().IndexOf(item) + 1)</td>
                            <td>@item.Name</td>
                            <td>@item.Phone</td>
                            <td>@item.City.CityName</td>
                            <td>@item.City.State.StateName</td>
                            <td>@item.NumberOfBeds</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-white"><i class="fa fa-pencil"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this account?');"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">No hospital found.</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>
