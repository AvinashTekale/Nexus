@model Nexus.Entities.Partner
<div class="card card-body">
    <h4>Partner</h4>

    <form asp-action="Edit" asp-route-id="@Model.Id">
        <!-- Name -->
        <div class="form-group">
            <div class="row m-0 p-3">
                <div class="col-12 col-lg-2 col-md-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-12 col-lg-10 col-md-10">
                    <input asp-for="Name" class="form-control" placeholder="Enter name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Location -->
        <div class="form-group">
            <div class="row m-0 p-3">
                <div class="col-12 col-lg-2 col-md-2">
                    <label asp-for="Location"></label>
                </div>
                <div class="col-12 col-lg-10 col-md-10">
                    <input asp-for="Location" class="form-control" placeholder="Enter location" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Type -->
        <div class="form-group">
            <div class="row m-0 p-3">
                <div class="col-12 col-lg-2 col-md-2">
                    <label asp-for="Types">Select Type</label>
                </div>
                <div class="col-12 col-lg-10 col-md-10">
                    <select asp-for="Types" asp-items="@(new SelectList(new[] { "Manufacturer", "Vendor", "Service Provider" }, Model.Types))" class="form-control">
                    </select>
                    <span asp-validation-for="Types" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row m-0 p-3">
                <div class="col-12 col-lg-2 col-md-2"></div>
                <div class="col-12 col-lg-10 col-md-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </form>

</div>